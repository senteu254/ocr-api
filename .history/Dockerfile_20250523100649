FROM php:8.2-apache

RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    imagemagick \
    ghostscript \
    && rm -rf /var/lib/apt/lists/*

# ðŸ”§ Allow ImageMagick to process PDFs
RUN sed -i 's/<policy domain="coder" rights="none" pattern="PDF" \/>/<!-- PDF policy removed -->/' /etc/ImageMagick-6/policy.xml

RUN a2enmod rewrite

COPY . /var/www/html/
